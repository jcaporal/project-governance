    <script>
        const pages = ['page-home', 'page-lifecycle', 'page-raci', 'page-prioritization'];
        
        function navigate(pageId) {
            pages.forEach(id => {
                const page = document.getElementById(id);
                if (page) {
                    page.classList.add('hidden');
                }
            });
            const currentPage = document.getElementById(pageId);
            if (currentPage) {
                currentPage.classList.remove('hidden');
            }
        }

        function toggleContent(id) {
            const content = document.getElementById(id);
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
            } else {
                content.classList.add('hidden');
            }
        }
        
        const quizQuestions = [
            {
                scenario: "A project manager is presenting the weekly status report to key stakeholders. What is the project manager's RACI role?",
                options: ["Responsible", "Accountable", "Consulted", "Informed"],
                correctAnswer: "Informed",
                explanation: "When you present a status report, you are sharing information about a decision that has already been made or work that has already been done. You are keeping stakeholders **Informed**."
            },
            {
                scenario: "The lead developer is writing the code for a new feature. What is the developer's RACI role?",
                options: ["Responsible", "Accountable", "Consulted", "Informed"],
                correctAnswer: "Responsible",
                explanation: "The person or team who actually does the work is **Responsible**. They are on the hook for completing the task."
            },
            {
                scenario: "A senior executive gives the final approval on the project budget. What is the executive's RACI role?",
                options: ["Responsible", "Accountable", "Consulted", "Informed"],
                correctAnswer: "Accountable",
                explanation: "The **Accountable** party is the single person who holds the ultimate authority to approve or deny a decision. The buck stops with them."
            }
        ];

        let currentQuestionIndex = 0;

        function initializeQuiz() {
            currentQuestionIndex = 0;
            loadQuestion();
        }

        function loadQuestion() {
            if (currentQuestionIndex < quizQuestions.length) {
                const question = quizQuestions[currentQuestionIndex];
                document.getElementById('quiz-question').innerHTML = `Question ${currentQuestionIndex + 1}: ${question.scenario}`;
                
                const optionsContainer = document.getElementById('quiz-options');
                optionsContainer.innerHTML = '';
                
                question.options.forEach(option => {
                    const button = document.createElement('button');
                    button.textContent = option;
                    button.className = 'quiz-option w-full bg-gray-50 rounded-xl p-4 text-left font-lora text-[#1d364e] border border-gray-200 hover:bg-gray-100 transition-colors duration-200';
                    button.onclick = () => checkAnswer(option);
                    optionsContainer.appendChild(button);
                });

                document.getElementById('quiz-feedback').classList.add('hidden');
                document.getElementById('next-button').classList.add('hidden');
            } else {
                navigate('page-home');
            }
        }

        function checkAnswer(selectedOption) {
            const question = quizQuestions[currentQuestionIndex];
            const feedbackElement = document.getElementById('quiz-feedback');
            const options = document.querySelectorAll('.quiz-option');

            options.forEach(option => {
                option.disabled = true;
                if (option.textContent === selectedOption) {
                    option.classList.remove('hover:bg-gray-100');
                    if (selectedOption === question.correctAnswer) {
                        option.classList.add('bg-green-100', 'border-green-500');
                        feedbackElement.innerHTML = `**Correct!** ${question.explanation}`;
                        feedbackElement.classList.add('text-green-600');
                        feedbackElement.classList.remove('text-red-600');
                    } else {
                        option.classList.add('bg-red-100', 'border-red-500');
                        feedbackElement.innerHTML = `**Incorrect.** The correct answer is **${question.correctAnswer}**. ${question.explanation}`;
                        feedbackElement.classList.add('text-red-600');
                        feedbackElement.classList.remove('text-green-600');
                    }
                }
            });

            feedbackElement.classList.remove('hidden');
            if (currentQuestionIndex < quizQuestions.length - 1) {
                document.getElementById('next-button').classList.remove('hidden');
            }
        }

        function nextQuestion() {
            currentQuestionIndex++;
            loadQuestion();
        }

        window.onload = () => {
            const hash = window.location.hash.substring(1);
            if (hash && document.getElementById(hash)) {
                navigate(hash);
            } else {
                navigate('page-home');
            }
        };
        
        window.onhashchange = () => {
            const hash = window.location.hash.substring(1);
            if (hash && document.getElementById(hash)) {
                navigate(hash);
            } else {
                navigate('page-home');
            }
        };

    </script>
</body>
</html>
